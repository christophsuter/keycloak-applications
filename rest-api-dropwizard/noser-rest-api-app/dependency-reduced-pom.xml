<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>noser-rest-api</artifactId>
    <groupId>ch.noser.oauth2.rest.api</groupId>
    <version>0.1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>noser-rest-api-app</artifactId>
  <name>Noser Rest API App</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.10.3</version>
        <executions>
          <execution>
            <id>generate-service-docs</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>javadoc</goal>
            </goals>
            <configuration>
              <doclet>com.tenxerconsulting.swagger.doclet.ServiceDoclet</doclet>
              <docletArtifact>
                <groupId>com.tenxerconsulting</groupId>
                <artifactId>swagger-doclet</artifactId>
                <version>1.1.3</version>
              </docletArtifact>
              <reportOutputDirectory>${project.build.outputDirectory}</reportOutputDirectory>
              <useStandardDocletOptions>false</useStandardDocletOptions>
              <additionalparam>-docBasePath {{docBasePath}}
                                -apiBasePath {{apiBasePath}}
                                -apiVersion ${project.version}
                                -apiInfoFile ${basedir}/src/main/resources/swagger/apiinfo.json
                                -apiAuthorizationsFile ${basedir}/src/main/resources/swagger/apiauth.json
                                -swaggerUiPath ${basedir}/src/main/resources/swagger/swagger-ui-2.2.5-updated-index.zip
                                -sortResourcesByPath
                                -disableDeprecatedOperationExclusion</additionalparam>
              <includeDependencySources>true</includeDependencySources>
              <dependencySourceIncludes>
                <dependencySourceInclude>ch.noser.oauth2.rest.api.service:*</dependencySourceInclude>
                <dependencySourceInclude>ch.noser.oauth2.rest.api:noser-rest-api</dependencySourceInclude>
                <dependencySourceInclude>ch.noser.oauth2.rest.api:noser-rest-api-domain</dependencySourceInclude>
              </dependencySourceIncludes>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <additionalparam>-Xdoclint:none</additionalparam>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.3</version>
        <configuration>
          <releaseProfiles>distribution</releaseProfiles>
          <goals>deploy docker:push</goals>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>distribution</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.5.5</version>
            <executions>
              <execution>
                <id>dist-assembly</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <ignoreMissingDescriptor>true</ignoreMissingDescriptor>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>2.4.3</version>
            <executions>
              <execution>
                <id>dist-shade</id>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer />
                    <transformer>
                      <manifestEntries>
                        <Main-Class>ch.noser.oauth2.rest.api.NoserRestAPIApp</Main-Class>
                        <Specification-Vendor>Noser Engineering AG</Specification-Vendor>
                        <Specification-Title>Noser Rest API App</Specification-Title>
                        <Implementation-Vendor>Noser Engineering AG</Implementation-Vendor>
                        <Implementation-Title>Noser Rest API App</Implementation-Title>
                      </manifestEntries>
                    </transformer>
                  </transformers>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.2-beta-5</version>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/bin.xml</descriptor>
              </descriptors>
            </configuration>
          </plugin>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <version>0.15.9</version>
            <executions>
              <execution>
                <id>build</id>
                <phase>package</phase>
                <goals>
                  <goal>build</goal>
                </goals>
                <configuration>
                  <images>
                    <image>
                      <name>noser-api</name>
                      <build>
                        <from>anapsix/alpine-java:jre8</from>
                        <maintainer>info@noser.com</maintainer>
                        <tags>
                          <tag>0.1.0-SNAPSHOT</tag>
                        </tags>
                        <ports>
                          <port>8080</port>
                          <port>8778</port>
                        </ports>
                        <volumes>
                          <volume>/var/log</volume>
                        </volumes>
                        <env>
                          <JAVA_TOOL_OPTIONS>-Dfile.encoding=UTF8 -Duser.timezone=UTC
                                                -Djava.awt.headless=true</JAVA_TOOL_OPTIONS>
                          <JVM_ARGS>-javaagent:jolokia-jvm-1.3.3-agent.jar=port=8778,host=0.0.0.0</JVM_ARGS>
                        </env>
                        <workdir>/srv/noser</workdir>
                        <cmd>java $JVM_ARGS -server -jar noser-rest-api-app-0.1.0-SNAPSHOT.jar
                                            server conf-local.yml</cmd>
                        <assembly>
                          <basedir>/srv/noser</basedir>
                          <mode>dir</mode>
                          <descriptor>bin.xml</descriptor>
                        </assembly>
                      </build>
                      <run>
                        <ports>
                          <port>service.port:8080</port>
                        </ports>
                        <volumes>
                          <bind>
                            <volume>C:\Users\christoph.suter\KPZ-Java\oauth2\rest-api\noser-rest-api-app\target/docker-volume/log:/var/log</volume>
                          </bind>
                        </volumes>
                        <env>
                          <JVM_ARGS>-Xmx300m</JVM_ARGS>
                        </env>
                        <wait>
                          <time>10000</time>
                          <log>org.eclipse.jetty.server.Server: Started</log>
                        </wait>
                      </run>
                    </image>
                  </images>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <images>
                <image>
                  <name>noser-api</name>
                  <build>
                    <from>anapsix/alpine-java:jre8</from>
                    <maintainer>info@noser.com</maintainer>
                    <tags>
                      <tag>0.1.0-SNAPSHOT</tag>
                    </tags>
                    <ports>
                      <port>8080</port>
                      <port>8778</port>
                    </ports>
                    <volumes>
                      <volume>/var/log</volume>
                    </volumes>
                    <env>
                      <JAVA_TOOL_OPTIONS>-Dfile.encoding=UTF8 -Duser.timezone=UTC
                                                -Djava.awt.headless=true</JAVA_TOOL_OPTIONS>
                      <JVM_ARGS>-javaagent:jolokia-jvm-1.3.3-agent.jar=port=8778,host=0.0.0.0</JVM_ARGS>
                    </env>
                    <workdir>/srv/noser</workdir>
                    <cmd>java $JVM_ARGS -server -jar noser-rest-api-app-0.1.0-SNAPSHOT.jar
                                            server conf-local.yml</cmd>
                    <assembly>
                      <basedir>/srv/noser</basedir>
                      <mode>dir</mode>
                      <descriptor>bin.xml</descriptor>
                    </assembly>
                  </build>
                  <run>
                    <ports>
                      <port>service.port:8080</port>
                    </ports>
                    <volumes>
                      <bind>
                        <volume>C:\Users\christoph.suter\KPZ-Java\oauth2\rest-api\noser-rest-api-app\target/docker-volume/log:/var/log</volume>
                      </bind>
                    </volumes>
                    <env>
                      <JVM_ARGS>-Xmx300m</JVM_ARGS>
                    </env>
                    <wait>
                      <time>10000</time>
                      <log>org.eclipse.jetty.server.Server: Started</log>
                    </wait>
                  </run>
                </image>
              </images>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-jvm</artifactId>
      <version>1.3.3</version>
      <classifier>agent</classifier>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>jolokia-core</artifactId>
          <groupId>org.jolokia</groupId>
        </exclusion>
        <exclusion>
          <artifactId>json-simple</artifactId>
          <groupId>com.googlecode.json-simple</groupId>
        </exclusion>
        <exclusion>
          <artifactId>tools</artifactId>
          <groupId>com.sun</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

